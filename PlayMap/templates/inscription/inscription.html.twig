{% extends "layout.html.twig" %}

{% block title %}
	{{ parent() }}- Inscription
{% endblock %}

{% block content %}

	<main id="main" class="mx-auto">
		<div id="borderPage" class="row mb-5 d-flex justify-content-center">

			<div class="row">
				<div class="col-12">
					<h3 class="my-5 text-center">Créer votre compte en quelque étapes</h3>
				</div>
			</div>
			<div id="barreJaune" class="progress mb-5">
				<div id="statue" class="progress-bar bg-warning" role="progressbar" style="width: 10%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
			</div>

			<form class="col-12">

				<!--###############SECTION1########################-->

				<section id="sectRegister1" class="row">
					<div class="col-12">
						<div class="mb-5 ">
							<label for="exampleInputEmail1" class="form-label">Votre Pseudo</label>
							<input type="email" class="form-control" id="exampleInputEmail1">
						</div>

						<div class="mb-5">
							<label for="exampleInputEmail1" class="form-label">Email</label>
							<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
						</div>

						<div class="mb-5">
							<label for="exampleInputEmail1" class="form-label">Mot de Passe</label>
							<input type="email" placeholder="Au moins 6 caractère" class="form-control" id="mdp">
						</div>

						<div class="mb-5">
							<label for="exampleInputPassword1" class="form-label">Entrez le mot de passe à nouveau</label>
							<input type="password" class="form-control" id="">
						</div>


						<div class="mb-3 form-check">
							<input type="checkbox" class="form-check-input " id="Newsletter">
							<label class="form-check-label " for="Newsletter">S'abonner à la Newsletter
							</label>
						</div>

						<div class="btnContinuer">
							<div type="submit" id="btn1" class="btn btn-warning text-light mb-5 px-3">Continuer
								<img src="{{ asset('images/Polygon_1.png') }}" class="img-fluid" alt=""></div>
						</div>
					</div>

				</section>


				<!--###############SECTION2########################-->

				<section id="sectRegister2" class="col-8 d-none">
					<div class="mb-5 ">
						<label for="Anniversaire" class="form-label">Anniversaire</label>
						<input type="text" class="form-control" id="Anniversaire">
					</div>

					<div class="mb-5">
						<label for="exampleInputEmail1" class="form-label">Adresse</label>
						<input type="text" class="form-control" id="Adresse" aria-describedby="emailHelp">
					</div>

					<div class="mb-5">
						<label for="Ville" class="form-label">Ville</label>
						<input type="text" class="form-control" id="ville">
					</div>

					<div class="mb-5">
						<label for="CodePostale" class="form-label">Code Postale</label>
						<input type="text" class="form-control" id="CodePostale">
					</div>

					<div class="btnContinuer">
						<div type="submit" id="btn2" class="btn btn-warning text-light mb-5 px-3">Terminer
							<img src="{{ asset('images/Polygon_1.png') }}" class="img-fluid" alt=""></div>
					</div>

				</section>


				<!--###############SECTION3########################-->


				<section id="sectRegister3" class="d-none">

					<h3 class="pb-5 text-center">
						Par quel moyen vous déplacez-vous ?</h3>

					<div class="row mb-5">
						<div class="col-4">
							<div id="cardTransport" class="card border border-3 m-auto px-3 ">
								<img src="{{ asset('images/Ombre+Vélo.png') }}" class="mx-auto d-block" alt="...">
								<div class="card-body">
									<p class="card-text">Le Vélo
										<br>
										( L'Intemporel )</p>
								</div>
							</div>
						</div>

						<div class="col-4">
							<div id="cardTransport2" class="card border border-3 m-auto px-3">
								<img src="{{ asset('images/Icon_Apied.png') }}" class="mx-auto d-block" alt="...">
								<div class="card-body">
									<p class="card-text">
										A Pied
										<br>
										( Fidèle au poste )</p>
								</div>
							</div>
						</div>

						<div class="col-4">
							<div id="cardTransport3" class="card border border-3 m-auto px-3">
								<img src="{{ asset('images/ombretrottinette.png') }}" class="mx-auto d-block" alt="...">
								<div class="card-body">
									<p class="card-text">La Trottinette
										<br>
										( So Cool )</p>
								</div>
							</div>
						</div>
					</div>


					<div class="mb-3 form-check">
						<input type="checkbox" class="form-check-input " id="exampleCheck1">
						<label class="form-check-label text-warning" for="exampleCheck1">J’accepte en créant un compte, les Conditions générales de PlayMap.
						</label>
					</div>

					<div class="d-flex justify-content-end mt-4">
						<button type="submit"  class="btn btn-warning text-light mb-4 px-3">Créer votre compte</button>
					</div>

				</section>

			</form>

		</div>
	</main>
{% endblock %}
